    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.3",
    "jest-svg-transformer": "^1.0.0",
    "node-sass": "^5.0.0",
    "preact-async-route": "^2.2.1",
    "preact-cli": "^3.0.0",
